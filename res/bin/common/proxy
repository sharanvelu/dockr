#!/bin/bash

## DockR by Sharan

# Check the domain name set for proxy.
check_proxy_for_project() {
    if [ -n "${DOCKR_DOMAIN}" ] && [ "${DOCKR_DOMAIN}" != "" ]; then
        is_dockr_asset_up proxy

        check_domain_in_hosts
        check_domain_in_proxy_container
    fi
}

# Check if the domain is set in /etc/hosts.
check_domain_in_hosts() {
    # DockR will add the domain in the /etc/hosts file in the future.
    if ! grep -q -w ${DOCKR_DOMAIN} /etc/hosts; then
        echo -e "Specified domain ${CYAN}${DOCKR_DOMAIN}${CLR} is not present in the ${CYAN}/etc/hosts${CLR} file."
        echo -e "Please add the domain to ${BOLD}/etc/hosts${CLR} file \n"

        # exit 1
    fi
}

# Check domain presence in the Proxy container
check_domain_in_proxy_container() {
     if ! docker-compose -f "${DOCKR_COMPOSE_ASSET}" -p "${DOCKR_ASSET_PROJECT_NAME}" exec proxy bash -c "ls /etc/nginx/sites-enabled | grep -q -w ${DOCKR_DOMAIN}"; then
         add_domain_to_proxy_container
     fi
}

# Add domain to proxy container for forwarding domain request to respective port.
add_domain_to_proxy_container() {
    DT_PROXY_SITE="http://host.docker.internal:${DOCKR_PORT}"
    docker-compose -f "${DOCKR_COMPOSE_ASSET}" -p "${DOCKR_ASSET_PROJECT_NAME}" exec proxy bash -c "add-listener ${DOCKR_DOMAIN} ${DT_PROXY_SITE} >> /dev/null"
}
